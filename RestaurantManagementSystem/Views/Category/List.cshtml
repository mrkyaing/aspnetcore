@model IList<CategoryViewModel>
<head>
    <link href="~/lib/datatables/css/datatables.bootstrap4.min.css" rel="stylesheet" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
</head>
<h1>Category Information </h1>
<hr />
@if (TempData["Msg"] != null) {
    <div class="text-info">
        <b>@TempData["Msg"] </b>
    </div>
}
<div style="width:90%; margin:0 auto;">
<table class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0" id="categoryTable">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Code</th>
            <th scope="col">Name</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @{
            int index = 1;
        }
        @foreach (var item in Model) {
            <tr>
                <th scope="row">@index</th>
                <td>@item.Code</td>
                <td>@item.Name</td>
                <td>
                    <a href="/category/edit?Id=@item.Id" class="btn btn-success" role="button">edit</a>
                    <a href="/category/delete?Id=@item.Id" onclick=" return confirm('are you sure to delete this record?');" class="btn btn-danger" role="button">delete</a>
                </td>
            </tr>
            index++;
        }
    </tbody>
</table>
</div>
<script>
    $(document).ready(function () {
        $('#categoryTable').DataTable();
    });
</script>
@section Scripts
    {
    <script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
    <script src="~/lib/datatables/js/dataTables.bootstrap4.min.js"></script>
}