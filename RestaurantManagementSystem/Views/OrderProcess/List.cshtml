@model List<OrderViewModel>
<head>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
</head>
<div class="panel panel-default">
    <div class="panel-heading">
        <div class="row">
            <h2 class="panel-title pull-left">
                Orders
            </h2>
            <button style="margin-right:5px" id="addNewItem" class="btn btn-primary pull-right">Add New</button>
        </div>
    </div>

    <div class="panel-body">
        <table id="ordersTable" class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Order Number</th>
                    <th>Is Percel</th>
                    <th>Status</th>
                    <th>Table</th>
                    <th>Employee Assigned</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int i = 1;
                }
                @foreach(var item in Model) {
                    <tr>
                        <td>@i</td>
                        <td>@item.No</td>
                        <td>@item.IsParcel</td>
                        <td>@item.Status</td>
                        <td>@item.TableId</td>
                        <td>@item.EmployeeId</td>
                    </tr>
                    i++;
                }
            </tbody>
        </table>
    </div>
</div>

<div id="newOrderModal" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">New Order Information</h4>
                @if (ViewBag.Msg != null) {
                    <div class="form-control">
                        <b class="text-danger">@ViewBag.Msg </b>
                    </div>
                }
            </div>
            <div class="modal-body">
                <h3>
                    Order Master
                </h3>
                <hr />
                <div class="form-horizontal">
                    <input type="hidden" id="orderMasterId" />
                    <div class="form-group">
                        <label class="control-label col-md-2">
                            Order No
                        </label>
                        <div class="col-md-4">
                            <input type="text" id="txtOrderNo" placeholder="Order Number" class="form-control" />
                        </div>
                        <label class="control-label col-md-2">
                            Is Percel
                        </label>
                        <div class="col-md-4">
                            <select id="txtIsPercel" class="form-control">
                              <option value="True">Yes</option>
                              <option value="False">No</option>
                          </select>
                        </div>
                        <label class="control-label col-md-2">
                            Status
                        </label>
                        <div class="col-md-4">
                            <select id="txtStatus" class="form-control">
                                <option value="p">InProgress</option>
                                <option value="a">Accept</option>
                                <option value="c">Cancel</option>
                                <option value="f">Finished</option>
                            </select>
                        </div>
                    </div>
                    <label class="control-label col-md-2">
                        Table
                    </label>
                    <div class="col-md-4">
                        <select id="txtTableNo" class="form-control">
                            <option value="t1">t1</option>
                            <option value="t2">t2</option>
                            <option value="t3">t3</option>
                        </select>
                    </div>
                </div>
                </div>

                <h3 style="margin-top:10px">Order Details</h3>
                <table id="detailsTable" class="table">
                    <thead>
                        <tr>
                            <th style="width:35%">Product</th>
                            <th style="width:20%">Unit Price</th>
                            <th style="width:15%">Quantity</th>
                            <th style="width:20%">Total Amount</th>
                            <th style="width:20%">Remark</th>
                            <th style="width:10%">Actions</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                    <tfoot>
                        <tr>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                        <td></td>
                            <td>
                                <a class="btn btn-info" id="addMore">Add Detail</a>
                            </td>
                        </tr>
                    </tfoot>
                </table>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                <button id="saveOrder" type="button" class="btn btn-primary">Make an Order</button>
            </div>
            </div>
        </div>
    </div>

<div id="orderDetailsModal" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Order Details</h4>
            </div>
            <div class="modal-body">

                <div class="form-horizontal">
                    <div class="form-group">
                        <input type="hidden" id="detailId" />
                        <label class="control-label col-md-3">
                            Product Name
                        </label>
                        <div class="col-md-3">
                            <select class="form-control" id="txtProductId">
                                @foreach (var p in ViewBag.Products) {
                                    <option value="@p.Id">@p.Name</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-3">
                            Unit Price
                        </label>
                        <div class="col-md-4">
                            <input type="number" id="txtUnitPrice" placeholder="Product Price" class="form-control" />
                        </div>
                        <label class="control-label col-md-2">
                            Quanity
                        </label>
                        <div class="col-md-3">
                            <select class="form-control" id="txtQty">
                                <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="3">3</option>
                                <option value="4">4</option>
                                <option value="5">5</option>
                            </select>
                        </div>
                        <label class="control-label col-md-3">
                            Remark
                        </label>
                        <div class="col-md-4">
                            <input type="text" id="txtRemark" placeholder="Product Remark" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3 col-lg-offset-9">
                            <a id="addToList" class="btn btn-primary">Add To List</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
