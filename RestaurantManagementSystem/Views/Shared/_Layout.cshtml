<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Restaurant Management System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RestaurantManagementSystem.styles.css" asp-append-version="true" />
</head>

<body>

    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-black border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Restaurant Management System</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Category</a>
                            <div class="dropdown-menu dropdown-menu-dark">
                                <a class="dropdown-item" href="/category/list">List</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="/category/entry">Entry</a>
                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Product</a>
                            <div class="dropdown-menu dropdown-menu-dark">
                                <a class="dropdown-item" href="/product/list">List</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="/product/entry">Entry</a>
                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Position</a>
                            <div class="dropdown-menu dropdown-menu-dark">
                                <a class="dropdown-item" href="/position/list">List</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="/position/entry">Entry</a>
                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Table</a>
                            <div class="dropdown-menu dropdown-menu-dark">
                                <a class="dropdown-item" href="/table/list">List</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="/table/entry">Entry</a>
                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Employee</a>
                            <div class="dropdown-menu dropdown-menu-dark">
                                <a class="dropdown-item" href="/employee/list">List</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="/employee/entry">Entry</a>
                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Order</a>
                            <div class="dropdown-menu dropdown-menu-dark">
                                <a class="dropdown-item" href="/orderprocess/list">List</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="/orderprocess/entry">Entry</a>
                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Reports</a>
                            <div class="dropdown-menu dropdown-menu-dark">
                                <a class="dropdown-item" href="/employee/EmployeeDetailReport">Employee Detail Report</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="/product/ProductDetailReport">Product Detail Report</a>
                            </div>
                        </li>
                        <li class="nav-item text-white">
                            <partial name="_LoginPartial" />
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container"> &copy; 2023 - RestaurantManagementSystem - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a></div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/datatables.net/jquery.datatables.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
