<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<div class="container">
    <h1>Table Entry</h1>
    <hr />
    <div class="text-success">
        @if (ViewBag.Msg != null) {
            <b>@ViewBag.Msg</b>
        }
    </div>
    <form action="/table/entry" method="post">
        <div class="mb-3">
            <label class="form-label">Table No</label>
            <input class="form-control" type="text" name="No" required />
        </div>
        <div class="mb-3">
            <label class="form-label">Is Available</label>
            <select class="form-control" name="IsAvailable">
                <option value="y">Yes</option>
                <option value="n">No</option>
            </select>
        </div>
        <div class="mb-3">
            <label class="form-label">Available Capacity Person</label>
            <input class="form-control" type="number" name="AvailableCapacityPerson" required />
        </div>
        <div class="mb-3">
            <label class="form-label">Status</label>
            <input class="form-control" type="text" name="Status" required />
        </div>
        <input class="btn btn-success" type="submit" value="Entry">
    </form>
</div>
