@model TableViewModel
<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<div class="panel panel-default">
    <h1>Table Edit</h1>
    <hr />
    <form action="/table/update" method="post">
        <div class="mb-3">
            <label class="form-label">Table No</label>
            <input class="form-control" type="text" name="No"  value="@Model.No" required />
        </div>
        <div class="mb-3">
            <label class="form-label">Is Available</label>
            <select class="form-control" name="IsAvailable">
                <option value="y">Yes</option>
                <option value="n">No</option>
            </select>
        </div>
        <div class="mb-3">
            <label class="form-label">Available Capacity Person</label>
            <input class="form-control" type="number" name="AvailableCapacityPerson" required value="@Model.AvailableCapacityPerson" />
        </div>
        <div class="mb-3">
            <label class="form-label">Status</label>
            <input class="form-control" type="text" name="Status" required value="@Model.Status" />
        </div>
        <input class="btn btn-success" type="submit" value="Update">
    </form>
</div>
