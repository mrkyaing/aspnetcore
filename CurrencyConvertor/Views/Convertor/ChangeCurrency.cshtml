<h1>Currency Convertor</h1>
<style>
    .main {
    align-content:center
    }
    form{
        display:table
    }
    div{
        display:table-row
    }

    label, input[type=number], input[type=submit] {
        display:table-cell
    }
    .layoutChange{
        margin-left:80px
    }
</style>
<script>
    function fillInputData(){
        if("@ViewBag.SelectedCurrency"!=""){
            document.getElementById("ddlCurrency").value = "@ViewBag.SelectedCurrency";//usd , sgd 
        }
        if ("@ViewBag.Amount"!=0) {
            document.getElementById("txtAmount").value = "@ViewBag.Amount";//10
        }
    }
</script>
<body onload="fillInputData()">
    <div class="main">
        <form action="/Convertor/ChangeCurrency" method="post">
            <div>
                <label>Choose Currency</label>
                <select name="fromCurrency" id="ddlCurrency">
                    <option value="">---Choose One---</option>
                    <option value="usd">US Dollor($)</option>
                    <option value="sgd">Singapore Dollor($)</option>
                    <option value="baht">Thai Baht (b)</option>
                </select>
            </div>
            <div>
                <label>Amount</label>
                <input type="number" name="amount" id="txtAmount"/>
            </div>
            <div>
                <label>Result (MMK)</label>
                <input type="number" value="@ViewBag.Result" readonly />
            </div>
            <div class="layoutChange">
                <input type="submit" value="Convert" />
                <input type="reset" value="Reset" />
            </div>
        </form>
    </div>
</body>
